{
  "compilerOptions": {
    "target": "esnext",                 // Ondersteunt moderne JavaScript
    "module": "esnext",                 // Genereer ES Modules
    "moduleResolution": "node",         // Gebruik Node.js-module-resolutie
    "esModuleInterop": true,            // Compatibiliteit met CommonJS-modules
    "forceConsistentCasingInFileNames": true,
    "allowImportingTsExtensions": true,
    "noEmit": true,
    "strict": true,                     // Schakel strikte typechecks in
    "skipLibCheck": true,               // Sla typechecks voor node_modules over
    "outDir": "./dist"                  // Map voor de gecompileerde bestanden
  },
  "include": ["src/**/*",
   "tests/**/*"]
}
